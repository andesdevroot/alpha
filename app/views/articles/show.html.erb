<h2 align="center">Título: <%= @article.title %></h2>
<div class="well col-xs-8 col-xs-offset-2">
 <h4 class="center"><strong>Descripción:</strong></h4>
 <hr>
 <%= simple_format(@article.description) %>
<%= link_to "Editar", edit_article_path(@article), class: "btn btn-xs btn-primary" %> |
<%= link_to "Borrar", article_path(@article), method: :delete, data: { confirm: "Are you sure you want to delete this article?"}, class: "btn btn-xs btn-danger" %>
<%= link_to 'Volver', articles_path, class: "btn btn-xs btn-success" %>